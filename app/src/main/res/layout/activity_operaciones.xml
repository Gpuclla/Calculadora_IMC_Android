<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operaciones">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TableRow
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/txtnro1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:ems="4"
                android:inputType="number"
                android:hint="0"
                android:textSize="40dp"
                android:textColorHint="@color/black"
                android:background="@drawable/bordes_redondos"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtSigno"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/txtnro2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:ems="4"
                android:inputType="number"
                android:hint="0"
                android:textSize="40dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/bordes_redondos"
                android:textAlignment="center"/>
        </TableRow>
        <TableLayout
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="resultado"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/bordes_redondos"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"/>
        </TableLayout>
        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="@color/amarillo"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnresta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/limon"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnmulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/teal_200"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btndividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="/"
                android:backgroundTint="@color/rosa"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnraiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raiz"
                android:backgroundTint="@color/naranja"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_weight="0.5"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Log"
                android:backgroundTint="@color/naranja"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_weight="0.5"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnelevado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="x^y"
                android:backgroundTint="@color/naranja"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/btnlimpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="C"
                android:backgroundTint="@color/naranja"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>


        </TableRow>
        <TableLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="Esperando un resultado..."
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="Esperando un resultado..."
                android:textSize="20dp"/>
        </TableLayout>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>